<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="40dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvIpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address: Loading..."
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/ivQrCode"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="30dp"
        android:background="#F5F5F5"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/etSessionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ادخل اسم الحصة (مثلاً : Lesson 1 Java)"
        android:textSize="17dp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Generate QR Code"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"/>



    <Button
        android:id="@+id/btnStop"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Stop QR Code"
        android:textSize="18sp"
        android:backgroundTint="#F50501"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnCurrentAttendance"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="View Attendance"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnViewSessions"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Classes Attendance"
        android:backgroundTint="#2196F3"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>



    <Button
        android:id="@+id/btnViewFraud"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Cheating List"
        android:backgroundTint="#F50501"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>



</LinearLayout>
</ScrollView>